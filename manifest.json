{
    "author": "Xiaoqian Xiao",
    "command": "poetry run python run.py",
     "inputs": {
        "fmriprep_dir": {
            "description": "fmriprep output files. Path do preprocessed BIDS dataset",
            "base": "file",
            "type": {
                "enum": [
                        "archive"
                        ]
            }
        },
        "pipelines": {
            "description": "Name of pipelines used for denoising, can be both file of json files with pipeline or file with name of pipelines from package",
            "base": "file",
            "optional": true
        }
    },                                          
    "config": {
        "highpass_cutoff": {
            "description": "High pass filter value.",
            "default": 0.008,
            "type": "integer"
        },
       "lowpass_cutoff": {
            "description": "Low pass filter value.",
            "default": 0.08,
            "type": "integer"
        },
        "gear-writable-dir": {
            "default": "/var/tmp",
            "description": "Gears expect to be able to write temporary files in /flywheel/v0/.  If this location is not writable (such as when running in Singularity), this path will be used instead.  fMRIPrep creates a large number of files so this disk space should be fast and local.",
            "type": "string"
        }, 
        "task": {
            "default": "",
            "description": "select a specific task to be processed",
            "type": "string"
        }
    },
    "custom": {
        "docker-image": "xiaoqianxiao/test:latest",
        "flywheel": {
            "suite": "BIDS Apps"
        },
        "gear-builder": {
            "category": "analysis",
            "image": "xiaoqianxiao/test:latest"
        },
        "license": {
            "non-commercial-use-only": true
        }
    },
    "description": "",
    "environment": {       
        "FLYWHEEL": "/flywheel/v0",
        "PWD": "/flywheel/v0"
    },
    "label": "RestingfMRI_Denoise",
    "license": "",
    "maintainer": "Xiaoqian <xiaoqian@stanford.edu>",
    "name": "RestingfMRI_Denoise",
    "source": "https://github.com/XiaoXiaoqian/RestingfMRI_Denoise.git",
    "url": "https://github.com/flywheel-apps/bids-fmriprep/blob/master/README.md",
    "version": "0.1"
}
